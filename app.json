{
  "expo": {
    "name": "Big Buys",
    "slug": "bigbuys-mobile-app",
    "scheme": "bigbuys",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.sigmacomputing.bigbuys",
      "associatedDomains": [
        "applinks:mobile.bigbuys.io",
        "applinks:mobile.bigbuys.io"
      ],
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSMicrophoneUsageDescription": "This app needs access to your microphone to enable voice-to-text messaging.",
        "NSSpeechRecognitionUsageDescription": "This app needs speech recognition to convert your voice to text."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.sigmacomputing.bigbuys",
      "permissions": [
        "RECORD_AUDIO"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "mobile.bigbuys.io",
              "pathPrefix": "/auth/verify"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-secure-store",
      [
        "@react-native-voice/voice",
        {
          "microphonePermission": "Allow Big Buys to access your microphone for voice-to-text messaging.",
          "speechRecognitionPermission": "Allow Big Buys to use speech recognition to convert your voice to text."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "e0618c99-4fd5-48b0-b5f4-d97de89707a9"
      }
    }
  }
}
